<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewUpper1"
        android:layout_width="107dp"
        android:layout_height="123dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Chevron"
        android:adjustViewBounds="true"
        android:maxWidth="48dp"
        android:maxHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/viewUpper1"
        app:layout_constraintEnd_toEndOf="@+id/viewUpper1"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/icons8_chevron"
        android:background="#00000000"/>

    <View
        android:id="@+id/viewUpper2"
        android:layout_width="304dp"
        android:layout_height="123dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewUpper1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAlertsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold"
        android:text="Alert history"
        android:textSize="32sp"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/viewUpper2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewCenter"
        android:layout_width="match_parent"
        android:layout_height="609dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlertsTitle" />

    <ImageView
        android:id="@+id/ivField1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:contentDescription="Field with bottom"
        android:src="@drawable/field_withbottom_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlertsTitle" />

    <TextView
        android:id="@+id/tvListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/archivo_bold"
        android:text="Warning"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ivField1"
        app:layout_constraintTop_toTopOf="@+id/ivField1" />

    <TextView
        android:id="@+id/tvListDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/archivo_regular"
        android:text="OCT. 18, 2022; 5:02 PM"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/ivField1"
        app:layout_constraintTop_toBottomOf="@+id/tvListTitle" />

    <TextView
        android:id="@+id/tvListContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/archivo_regular"
        android:text="Close...."
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivField1"
        app:layout_constraintEnd_toEndOf="@+id/ivField1"
        app:layout_constraintTop_toTopOf="@+id/ivField1" />

    <ImageView
        android:id="@+id/ivSmallChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="Small chevron"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/ivField1"
        app:layout_constraintEnd_toEndOf="@+id/ivField1"
        app:layout_constraintStart_toEndOf="@+id/tvListContents"
        app:layout_constraintTop_toTopOf="@+id/ivField1"
        app:srcCompat="@drawable/icons8_chevron_small" />

    <ProgressBar
        android:id="@+id/pbAlerts"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:indeterminateTint="?android:textColorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>