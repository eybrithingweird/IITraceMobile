<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivField1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/field_withbottom_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivCollegeLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="9dp"
        android:adjustViewBounds="true"
        android:contentDescription="College logo"
        android:maxWidth="70dp"
        android:maxHeight="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivField1"
        app:layout_constraintStart_toStartOf="@+id/ivField1"
        app:layout_constraintTop_toTopOf="@+id/ivField1"
        app:srcCompat="@drawable/ccs_logo" />

    <TextView
        android:id="@+id/tvListDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/archivo_bold"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivCollegeLogo"
        app:layout_constraintTop_toTopOf="@+id/ivField1" />

    <TextView
        android:id="@+id/tvListTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/archivo_regular"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivCollegeLogo"
        app:layout_constraintTop_toBottomOf="@+id/tvListDate" />

    <TextView
        android:id="@+id/tvListBuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/archivo_semibold"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivField1"
        app:layout_constraintTop_toTopOf="@+id/ivField1" />

    <TextView
        android:id="@+id/tvListRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/archivo_regular"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ivField1"
        app:layout_constraintTop_toBottomOf="@+id/tvListBuilding" />

    <ImageView
        android:id="@+id/ivSmallChevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Small chevron"
        android:maxWidth="20dp"
        android:maxHeight="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/ivField1"
        app:layout_constraintEnd_toEndOf="@+id/ivField1"
        app:layout_constraintStart_toEndOf="@+id/tvListBuilding"
        app:layout_constraintTop_toTopOf="@+id/ivField1"
        app:srcCompat="@drawable/icons8_chevron_small" />

</LinearLayout>