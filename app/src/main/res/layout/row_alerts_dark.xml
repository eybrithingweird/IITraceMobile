<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llFieldMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:id="@+id/rlField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/ivField1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/field_withbottom_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivField1"
            android:layout_alignStart="@+id/ivField1"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/archivo_bold"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/ivField1" />

        <TextView
            android:id="@+id/tvListMessage"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvListTitle"
            android:layout_alignStart="@+id/ivField1"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/archivo_regular"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/ivSmallChevron"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:background="@drawable/icons8_chevron_small_w"
            app:backgroundTint="@color/lesser_white"
            android:layout_alignEnd="@+id/ivField1"
            android:layout_alignTop="@+id/ivField1"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"/>

    </RelativeLayout>

</LinearLayout>