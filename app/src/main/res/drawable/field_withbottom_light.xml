<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme = "@style/Theme.IITrace">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/field_light" />
            <corners android:radius="10dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

    <item android:top="74dp" android:left="-5dp" android:right="-5dp" android:bottom="-5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/field_light_shade" />
            <corners
                android:radius="10dp"
                android:bottomRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>